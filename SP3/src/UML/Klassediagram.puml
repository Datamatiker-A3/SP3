@startuml
'https://plantuml.com/class-diagram

abstract class Turnering
class Main
class Hold
class KnockoutTurnering
class PointTurnering
class Kamp
Main o-- Ui
Ui *-- Turnering
Turnering <|-- KnockoutTurnering
Turnering<|-- PointTurnering
Turnering o-- "16" Hold
Turnering o-- Kamp
Kamp o-- "2" Hold

class Ui{
opretTurnering()
seTurnering()
seHold()
}

class Main {
main(String[] args)
Ui ui
}
class Kamp{
- int kampLængde
- int kampID
- Hold[2] holdKamp
- int[2] resultat
+ findVinderKnockOut()
+ findVinderPoint()
}

class Hold{
- int points
- String holdNavn
- int antalSpillere
- int holdID
- int målScore
+ getPoints()
+ setPoints()
+ toString()

}
abstract class Turnering{
- Scanner scanner
- Arraylist<Hold>holdListe
+ {abstract}læsHoldData()
+ {abstract}fjernOverskud()
+ {abstract}opsætKamp()
+ {abstract}opdaterMålScore()
+ {abstract}opdaterKampScore()
}
class KnockoutTurnering{
- int nuværendeKamp
- Arraylist <Kamp> kampOpsættelse
- Arraylist <Hold> holdListe
+ kampCyklus()
+ læsHoldData()
+ fjernOverskud()
+ opsætKamp()
}
class PointTurnering{
- int nuværendeKamp
+ læsHoldData()
+ fjernOverskud()
+ opsætKamp()
}


@enduml